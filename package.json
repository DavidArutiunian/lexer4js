{
  "name": "lexer4js",
  "description": "Simple JavaScript lexer",
  "version": "1.2.0",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "author": "arutiunian666@gmail.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/DavidArutiunian/lexer4js.git"
  },
  "bugs": {
    "url": "https://github.com/DavidArutiunian/lexer4js/issues"
  },
  "homepage": "https://github.com/DavidArutiunian/lexer4js#lexer4js",
  "files": [
    "dist"
  ],
  "keywords": [
    "lexer"
  ],
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "prepublish": "rimraf dist && rollup -c",
    "build": "rollup -c",
    "start": "rollup -cw",
    "cli": "node bin",
    "docs": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "pretty": "prettier --write src/**",
    "lint": "eslint . --ext .ts",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:ci": "jest --coverage --ci"
  },
  "dependencies": {
    "chalk": "^4.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^3.10.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-unicorn": "^22.0.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.5",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-typescript2": "^0.28.0",
    "ts-jest": "^26.2.0",
    "typedoc": "^0.19.0",
    "typescript": "^4.0.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 35,
        "functions": 60,
        "lines": 70,
        "statements": 70
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {
    "printWidth": 120
  }
}
